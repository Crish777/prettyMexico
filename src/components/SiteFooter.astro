---
import Image from "astro/components/Image.astro";
---

<footer class='p-4 rounded-lg shadow md:px-6 md:py-8 bg-black'>
  <div class='w-11/12 mx-auto max-w-[1600px]'>
    <div class='sm:flex sm:items-center sm:justify-between'>
      <a href='#' target='_blank' class='flex items-center mb-4 sm:mb-0'>
        <!-- <img src="/images/sitelogo.png" class="mr-4 h-8" alt="Flowbite Logo" /> -->
        <Image
          src='/images/sitelogo.png'
          class='drop-shadow-md'
          alt='Logo del sitio'
          width='120'
          height='60'
        />
        <!-- <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">¡Qué lindo México!</span> -->
      </a>
      <ul class='flex flex-wrap items-center mb-6 sm:mb-0'>
        <li>
          <a
            href='#'
            class='mr-4 text-sm text-gray-500 hover:underline md:mr-6 dark:text-gray-400'
            >México</a
          >
        </li>
        <li>
          <a
            href='#'
            class='mr-4 text-sm text-gray-500 hover:underline md:mr-6 dark:text-gray-400'
            >Colombia</a
          >
        </li>
        <li>
          <a
            href='#'
            class='mr-4 text-sm text-gray-500 hover:underline md:mr-6 dark:text-gray-400'
            >Panamá</a
          >
        </li>
        <li>
          <a
            href='#'
            class='text-sm text-gray-500 hover:underline dark:text-gray-400'
            >Perú</a
          >
        </li>
      </ul>
    </div>
    <hr class='my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8' />
    <span class='block text-sm text-gray-500 sm:text-center dark:text-gray-400'
      >© {new Date().getFullYear()} <a
        target='_blank'
        class='hover:underline'>Qué lindo México™</a
      >. All Rights Reserved.
    </span>
  </div>
</footer>
